pipeline{
    agent any

    environment {
        DOCKERHUB_CREDENTIALS=credentials('mike')
    }
    stages {
        stage('gitcheckout'){
            steps {
                git branch: 'main', url: 'https://github.com/michaelgatta/henry.git'
            }
        }

        stage('dockerbuild'){
            steps {
                sh 'docker build -t michaelgat/timeserver .'
            }
        }

        stage('authenticate'){
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS --password-stdin'
                echo 'login succeeded'
            }
        }

        stage('push to regisry'){
            steps {
                sh 'echo push'
            }
        }

        stage('clean'){
            steps {
                sh 'echo cleanup'
            }
        }

        
    }
}