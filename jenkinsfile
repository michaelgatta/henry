pipeline{
    agent any

    environment {
        DOCKERHUB_CREDENTIALS=credentials('mike')
    }
    stages {
        stage('gitcheckout'){
            steps {
                git branch: 'main', url: 'https://github.com/michaelgatta/henry.git'
            }
        }

        stage('dockerbuild'){
            steps {
                sh 'docker build -t michaelgat/timeserver .'
            }
        }

        stage('authenticate'){
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                echo 'login succeeded'
            }
        }

        stage('push to regisry'){
            steps {
                script {
                    sh 'docker tag michaelgat/timeserver docker.io/ michaelgat/timeserver:$BUILD_ID'
                    sh 'docker push docker.io/ michaelgat/timeserver:$BUILD_ID'

                }
            
            }
        }

        stage('clean'){
            steps {
                script {
                    sh 'docker rmi -f $(docker image ls -aq)'
                    sh 'docker logout'
                }
                sh 'echo cleanup'
            }
        }

        
    }
}